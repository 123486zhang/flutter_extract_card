<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/dlg_layout"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="@color/white"
        android:orientation="vertical">


        <TextView
            android:id="@+id/dlg_title"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="标题"
            android:textColor="@color/color_333333"
            android:textSize="16sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_color" />

        <TextView
            android:id="@+id/dlg_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:minHeight="107dp"
            android:maxHeight="380dp"
            android:paddingStart="19dp"
            android:paddingTop="27dp"
            android:paddingEnd="19dp"
            android:paddingBottom="27dp"
            android:text="普通测出全部好友"
            android:textColor="@color/color_333333"
            android:textSize="16sp" />

        <FrameLayout
            android:id="@+id/dlg_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/ll_button_container"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/line_color"
            android:orientation="horizontal"
            android:paddingTop="1px"
            android:visibility="visible">

            <TextView
                android:id="@+id/dlg_left_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="1px"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="免费体验"
                android:textColor="@color/color_666666"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/dlg_right_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/main_color"
                android:gravity="center"
                android:text="开通会员"
                android:textColor="@color/color_333333"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>